@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Промени паролата";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="u-margin-top--20">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="o-row-container">
    <form id="change-password-form" method="post">
        <div asp-validation-summary="All" class="u-text-danger"></div>
        <div>
            <label asp-for="Input.OldPassword"></label>
            <input asp-for="Input.OldPassword" />
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Input.NewPassword"></label>
            <input asp-for="Input.NewPassword" />
            <span asp-validation-for="Input.NewPassword" class="u-text-danger"></span>
        </div>
        <div>
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" />
            <span asp-validation-for="Input.ConfirmPassword" class="u-text-danger"></span>
        </div>
        <button type="submit" class="btn btn-add">Промени паролата</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}