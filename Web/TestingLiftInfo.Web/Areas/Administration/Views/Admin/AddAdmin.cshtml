@model TestingLiftInfo.Web.ViewModels.Administration.Admin.AddAdminViewModel

<h3>Добави нов инспектор</h3>

<form asp-area="Administration" asp-controller="Admin" asp-action="AddAdmin" method="post" onsubmit="return submitResult();">
    <div class="text-center" style="margin-top:100px">
        <label for="name" style="font-size:larger">E-mail на потребителя: </label>
        <input class="form-control-sm" asp-for="Email" type="text" id="name" size="25" />
        <button type="submit" class="btn btn-success btn-sm">✙ Добави</button>
    </div>
</form>

<script>
function submitResult() {
   if ( confirm("Сигурни ли сте, че искате да добавите този потребител като инспектор в системата?") == false ) {
      return false ;
   } else {
      return true ;
   }
}
</script>