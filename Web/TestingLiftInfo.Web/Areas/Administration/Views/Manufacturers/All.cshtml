@model TestingLiftInfo.Web.ViewModels.Administration.Manufacturers.GetAllManufacturerViewModel

@{
    this.ViewData["Title"] = "Производители";
}

@if (@TempData["CreateManufacturer"] != null)
{
    <div id="newManufacturer" class="alert alert-dismissible alert-success">@TempData["CreateManufacturer"]</div>
}

<h3>@this.ViewData["Title"]</h3>

<div>
    <a style="float:right" class="btn btn-success mb-3" asp-area="Administration" asp-controller="Manufacturers" asp-action="Create">✙ Добави</a>
</div>

<table class="table table-dark border border-light ">
    <thead>
        <tr>
            <th class=" border border-light text-light" scope="col" style="text-align:center; width:30px">№</th>
            <th class="border border-light text-light" scope="col" style="width:600px">Име</th>
            <th class="border border-light text-light " scope="col" style="text-align:center; width:80px"><font size="3">Брой асансьори</font></th>
        </tr>
    </thead>
    <tbody>
        @{var count = 1;}
        @foreach (var item in Model.Manufacturers)
        {
            string color = "honeydew";

            if (count % 2 != 0)
            {
                color = "honeydew";
            }
            else
            {
                color = "lightblue";
            }

            <tr class="text-dark border-light" style="background-color:@color">
                <td class="border border-light" style="text-align:center">@count</td>
                <td class="border border-light">@item.Name</td>
                <td class="border border-light" style="text-align:center">@item.Lifts.Count()</td>

            </tr>

            count++;
        }
    </tbody>
</table>

<script>
    setTimeout(function () {
        $('#newManufacturer').hide('fade');
    }, 5000);
</script> 