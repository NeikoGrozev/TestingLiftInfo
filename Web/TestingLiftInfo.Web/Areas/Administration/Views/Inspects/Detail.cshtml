@model TestingLiftInfo.Web.ViewModels.Administration.Inspects.InspectDetailViewModel

@{
    this.ViewData["Title"] = "Характеристика на ревизионния акт";
}

<h3>@this.ViewData["Title"]</h3>

<div class="jumbotron border border-primary shadow-lg" style="background-color:#e4f6d4">
    <div>
        <div class="text-center" style="margin-top:-50px">
            <h5>Асансьор с рег. № @Model.Lift.RegistrationNumber</h5>
        </div>
        <div style="margin-top:30px">
            <label style="font-size:20px"><b><i><u>Техническия преглед е извършен от инспектор: </u></i></b></label>
            <a style="font-size:16px"><b>@Model.ApplicationUserFirstName @Model.ApplicationUserLastName</b></a>
        </div>
        <div>
            <label style="font-size:20px"><b><i><u>Дата: </u></i></b></label>
            <a style="font-size:16px"><b>@Model.CreatedOn.ToShortDateString()</b></a>
        </div>
        <div>
            <label style="font-size:20px"><b><i><u>Вид на прегледа: </u></i></b></label>
            <a style="font-size:16px"><b>@Model.InspectType.Name</b></a>
        </div>
        <div>
            <label style="font-size:20px"><b><i><u>Забележки: </u></i></b></label>
            <a style="font-size:16px"><b>@Html.Raw(@Model.SanitizerNotes)</b></a>
        </div>
        <div>
            <label style="font-size:20px"><b><i><u>Предписания: </u></i></b></label>
            <a style="font-size:16px"><b>@Html.Raw(@Model.SanitizerPrescriptions)</b></a>
        </div>
        <div style="margin-top: 30px">
            <a class="btn btn-success" asp-area="Administration" asp-controller="Lifts" asp-action="Detail" asp-route-id="@Model.Lift.Id"><i class="fas fa-arrow-circle-left"></i> Назад</a>
        </div>
    </div>
</div>
