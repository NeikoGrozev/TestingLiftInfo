@model TestingLiftInfo.Web.ViewModels.Administration.Lifts.LiftDetailViewModel

@{
    this.ViewData["Title"] = "Техническа характеристика";
}

<h3>@this.ViewData["Title"]</h3>

<h5>Асансьор с рег. № @Model.RegistrationNumber</h5>

<div>
    <label style="font-size:18px">Вид на асансьорът: </label>
    <a style="font-size:18px"><b>@Model.LiftType</b></a>
</div>
<div>
    <label style="font-size:18px">Брой спирки: </label>
    <a style="font-size:18px"><b>@Model.NumberOfStops</b></a>
</div>
<div>
    <label style="font-size:18px">Товароподемност: </label>
    <a style="font-size:18px"><b>@Model.Capacity кг.</b></a>
</div>
<div>
    <label style="font-size:18px">Тип врати: </label>
    <a style="font-size:18px"><b>@Model.DoorType</b></a>
</div>
<div>
    <label style="font-size:18px">Производител: </label>
    <a style="font-size:18px"><b>@Model.ManufacturerName</b></a>
</div>
<div>
    <label style="font-size:18px">Адрес: </label>
    <a style="font-size:18px"><b>гр. @Model.CityName, @Model.Address</b></a>
</div>
<div>
    <label style="font-size:18px">Поддържаща фирма: </label>
    <a style="font-size:18px"><b>@Model.SupportCompanyName</b></a>
</div>

<div>
    <a class="btn btn-success" asp-area="Administration" asp-controller="Lifts" asp-action="All">Назад</a>
</div>
