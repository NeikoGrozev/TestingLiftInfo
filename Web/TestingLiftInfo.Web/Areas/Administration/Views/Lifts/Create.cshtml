@using TestingLiftInfo.Data.Models.Enumerations
@model TestingLiftInfo.Web.ViewModels.Administration.Lifts.CreateLiftViewModel

<h3>Добави асансьор</h3>

<form asp-area="Administration" asp-controller="Lifts" asp-action="Create" method="post">
    @*<div>
            <label for="name">Град: </label>
            <input asp-for="Cities.Cities" type="text" id="name" />
            <button type="submit" class="btn btn-dark">Добави</button>
