@using TestingLiftInfo.Data.Models.Enumerations
@model TestingLiftInfo.Web.ViewModels.Administration.Lifts.BigCreateLiftViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

<div class="jumbotron border border-primary shadow-lg" style="background-color:#e4f6d4">
    <form asp-area="Administration" asp-controller="Lifts" asp-action="Create" method="post" onsubmit="return submitResult();">
        <h3 style="margin-top:-60px">Добави нов асансьор</h3>

        <div>
            <div class="form-group">
                <label asp-for="CreateLiftInputModel.LiftType" for="type" style="font-size:18px">Вид на асансьорът: </label>
                <select asp-for="CreateLiftInputModel.LiftType" id="type" class="form-control-sm border-dark" asp-items="Html.GetEnumSelectList<LiftType>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreateLiftInputModel.NumberOfStops" for="numberOfStops" style="font-size:18px">Брой спирки: </label>
                <input asp-for="CreateLiftInputModel.NumberOfStops" type="number" id="numberOfStops" class="form-control-sm" min="2" max="100" />
            </div>
            <div class="form-group">
                <label asp-for="CreateLiftInputModel.Capacity" for="capacity" style="font-size:18px">Товароподемност: </label>
                <input asp-for="CreateLiftInputModel.Capacity" type="number" id="capacity" class="form-control-sm" min="100" max="5000" />
                <a>кг.</a>
            </div>
            <div class="form-group">
                <label asp-for="CreateLiftInputModel.DoorType" for="type" style="font-size:18px">Тип врати: </label>
                <select asp-for="CreateLiftInputModel.DoorType" id="type" class="form-control-sm border-dark" asp-items="Html.GetEnumSelectList<DoorType>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreateLiftInputModel.ManufacturerId" for="manufacturer" style="font-size:18px">Производител: </label>
                <select asp-for="CreateLiftInputModel.ManufacturerId" id="manufacturer" class="form-control-sm border-dark">
                    @foreach (var item in Model.LiftInputDataViewModel.Manufacturers)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CreateLiftInputModel.ProductionNumber" for="productionNumber" style="font-size:18px">Производствен №: </label>
                <input asp-for="CreateLiftInputModel.ProductionNumber" type="text" id="productionNumber" class="form-control-sm" />
            </div>
            <div class="form-group">
                <label asp-for="CreateLiftInputModel.CityId" for="city" style="font-size:18px">Град: </label>
                <select asp-for="CreateLiftInputModel.CityId" id="city" class="form-control-sm border-dark">
                    @foreach (var item in Model.LiftInputDataViewModel.Cities)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CreateLiftInputModel.Address" for="address" style="font-size:18px">Адрес: </label>
                <input asp-for="CreateLiftInputModel.Address" type="text" id="address" class="form-control-sm" />
            </div>
        </div>
        <input  asp-for="CreateLiftInputModel.RecaptchaValue" type="hidden" id="RecaptchaValue"  />
        <button type="submit" class="btn btn-success" style="margin-bottom:-70px">✙ Добави</button>

    </form>
</div>

@section Scripts
{
    <script>
        function submitResult() {
            if (confirm("Сигурни ли сте, че искате да регистрирате съоръжението?") == false) {
                return false;
            } else {
                return true;
            }
        }
    </script>

    <script src="https://www.google.com/recaptcha/api.js?render=@this.Configuration["GoogleReCaptcha:Key"]"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('@this.Configuration["GoogleReCaptcha:Key"]', { action: 'createLift' }).then(function (token) {
                document.getElementById("RecaptchaValue").value = token;
            });
        });
    </script>
}
