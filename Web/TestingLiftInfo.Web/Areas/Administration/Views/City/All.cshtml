@model TestingLiftInfo.Web.ViewModels.Administration.Cities.GetAllCityViewModel

@{
    this.ViewData["Title"] = "Градове";
}

<h3>@this.ViewData["Title"]</h3>
<div>
    <a style="float:right" class="btn btn-success mb-3" asp-area="Administration" asp-controller="City" asp-action="Create">Добави</a>
</div>

<table class="table table-dark border border-light" style="font-weight:300">
    <thead>
        <tr>
            <th class=" border border-light text-light" scope="col" style="text-align:center">№</th>
            <th class="border border-light text-light" scope="col">Име</th>
            <th class="border border-light text-light " scope="col" style="text-align:center">Брой асансьори</th>
        </tr>
    </thead>
    <tbody>
        @{var list = Model.Cities.Select(x => x.Name).ToList();}
        @for (int i = 0; i < Model.Cities.Count(); i++)
        {
            if (i % 2 == 0)
            {
                <tr class=" text-dark border-light" style="background-color:honeydew">
                    <td class="border border-light" style="width:50px; text-align:center">@(i + 1)</td>
                    <td class="border border-light" style="width:1000px">@list[i]</td>
                    <td class="border border-light" style="text-align:center">@(i + 1)</td>
                </tr>
            }
            else
            {
                <tr class=" text-dark border-light" style="background-color:lightblue">
                    <td class="border border-light" style="width:50px; text-align:center">@(i + 1)</td>
                    <td class="border border-light" style="width:10000px">@list[i]</td>
                    <td class="border border-light" style="text-align:center">@(i + 1)</td>
                </tr>
            }
        }
    </tbody>
</table>
